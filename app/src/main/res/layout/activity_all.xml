<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="false"
    tools:context=".Principal.AllActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_marginBottom="?attr/actionBarSize"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginBottom="5dp"
                android:fontFamily="@font/headland_one"
                android:gravity="center"
                android:text="Bienvenid@"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_h1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name_current_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/headland_one"
                android:gravity="center"
                android:text="user"
                android:textSize="13dp" />
            <!-- 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnAddWorker"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="btnAddWorker"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="95dp"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_person" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Agregar\nTrabajador"
                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnRegisterSymptoms"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="btnRegisterSymptoms"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="95dp"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_ebook" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Registrar\nSÃ­ntomas"
                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <!-- 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnEditWorker"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/headland_one"
                        android:gravity="center"
                        android:onClick="btnEditWorker"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="95dp"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_dardebaja" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Editar\nTrabajador"

                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btn_chart"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:onClick="btn_chart"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="95dp"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_chart" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Grafico\ntrabajador"
                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- 3 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btn_entrada_pdf"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="btn_entrada_pdf"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="95dp"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_schedule" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Horario\nEntrada"
                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btn_salida_pdf"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:onClick="btn_salida_pdf"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="95dp"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_cad2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Horario\nSalida"
                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <!-- 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btn_workerd"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:onClick="btn_workerd"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="95dp"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_registrosintomas2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Historial\ntrabajador"
                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btn_historialSintomas"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:onClick="btn_historialSintomas"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="95dp"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_hisorialsintomas" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Historial\nSÃ­ntomas"
                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- 5 -->
            <LinearLayout
                android:layout_marginBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/headland_one"
                    android:gravity="center"
                    android:text="UNIDAD DE TRABAJO"
                    android:textSize="@dimen/text_size_h3" />

                <TextView
                    android:id="@+id/tv_selectedunidadminera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/headland_one"
                    android:gravity="center"
                    android:text="UNIDAD DE TRABAJO"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>